localrules: all, clean

rule all:
     input: "pi.calc"

rule clean:
     shell: "rm -f pi.calc"

rule compile:
     input: "pi_MPI.c"
     output: temp("pi_MPI")
     shell: 
         'mpicc -o {output} {input}'

rule calc_pi:
     input: "pi_MPI"
     output: "pi.calc"
     resources:
           tasks=2,
           mpi='srun',
     shell: "{resources.mpi} {input} &> {output}"
